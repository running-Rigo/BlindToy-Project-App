<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_shade">

    <TextView
        android:id="@+id/buttonsHeader"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="BUTTON Sound-Einstellungen:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="92dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsHeader"/>

    <TextView
        android:id="@+id/file1header"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Wähle eine Datei für Button 1:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border1" />


    <Spinner
        android:id="@+id/dropdown_file1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#19615B"
        app:layout_constraintTop_toBottomOf="@+id/file1header"
        />

    <View
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/dropdown_file1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/file2header"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Wähle eine Datei für Button 2:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border2" />

    <Spinner
        android:id="@+id/dropdown_file2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#19615B"
        app:layout_constraintTop_toBottomOf="@+id/file2header"
        />

    <View
        android:id="@+id/border3"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_marginTop="10sp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/dropdown_file2"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/beeperHeader"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="BEEPER Sound-Einstellungen:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border3" />

    <View
        android:id="@+id/border4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="92dp"
        app:layout_constraintTop_toBottomOf="@id/beeperHeader"/>

    <TextView
        android:id="@+id/pitchheader"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Wähle die Tonhöhe:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border4" />

    <Spinner
        android:id="@+id/dropdown_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#19615B"
        app:layout_constraintTop_toBottomOf="@+id/pitchheader"
        />

    <View
        android:id="@+id/border5"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/dropdown_pitch"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/speedheader"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Wähle die Geschwindigkeit:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border5" />

    <Spinner
        android:id="@+id/dropdown_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#19615B"
        app:layout_constraintTop_toBottomOf="@+id/speedheader"
        />

    <View
        android:id="@+id/border6"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/dropdown_speed"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/beatheader"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Wähle den Rhythmus:"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border6" />

    <Spinner
        android:id="@+id/dropdown_beat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#19615B"
        app:layout_constraintTop_toBottomOf="@+id/beatheader"
        />

    <View
        android:id="@+id/border7"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/dropdown_beat"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/border7" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


